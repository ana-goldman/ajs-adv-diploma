{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "max-classes-per-file": ["error", 10],
        "no-use-before-define": ["error", { "functions": false, "classes": false }],
        "no-param-reassign": 0,
        "no-alert": "off",
        "max-len": ["error", { "code": 250 }]
    }
}
